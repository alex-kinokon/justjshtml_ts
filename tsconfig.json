{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "preserveConstEnums": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "example.ts", "tsup.config.ts"]
}
