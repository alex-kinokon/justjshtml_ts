{
  "name": "justjshtml",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsup",
    "test:types": "tsgo --noEmit",
    "test:basic": "node --experimental-transform-types --test tests/smoke.test.ts tests/selector.test.ts tests/stream.test.ts tests/markdown.test.ts",
    "test:html5lib": "node --experimental-transform-types --test tests/html5lib-encoding.test.ts tests/html5lib-tokenizer.test.ts tests/html5lib-tree-construction.test.ts tests/html5lib-serializer.test.ts",
    "test": "npm run test:basic && npm run test:html5lib && npm run test:types"
  },
  "devDependencies": {
    "@aet/eslint-rules": "2.0.112",
    "@types/node": "^25.2.3",
    "@typescript/native-preview": "7.0.0-dev.20260210.1",
    "eslint": "^9.39.2",
    "prettier": "3.8.1",
    "tsup": "^8.5.1"
  },
  "prettier": {
    "arrowParens": "avoid",
    "tabWidth": 2,
    "printWidth": 90,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5"
  }
}
